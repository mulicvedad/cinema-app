<div class="container-fluid body signup-container">
  <div class="row">
    <div class="col-lg-3 col-md-2"></div>
    <div class="col-lg-6 col-md-8 login-box">
      <div class="col-lg-12 login-key">
        <i class="fa fa-key" aria-hidden="true"></i>
      </div>
      <img class="img-form" src="/assets/images/ticket-red.png">

      <div class="col-lg-12 login-title">
      RESERVED TICKETS
      </div>
      <div class="col-lg-12 login-form">
        <div class="col-lg-12 login-form">
            <table class="table table-dark">
            <thead>
                <tr>
                <th scope="col">#</th>
                <th scope="col">Movie</th>
                <th scope="col">Showing date</th>
                <th scope="col">Room</th>
                <th scope="col">Seats</th>
                <th scope="col">Reservation status</th>
                <th scope="col"></th>
                <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {{#each model.reservations as |reservation index|}}
                    <tr>
                    <th scope="row">{{index}}</th>
                    <td>Mark</td> // for reservation id get Movie title
                    <td>Otto</td> // for reservation id get Showing date
                    <td>@mdo</td> // for reservation id get Room
                    <td>Mark</td> // for reservation id get Seats
                    <td>Otto</td> // for reservation id get status
                    <td></td> // if new => button confirm => payment route
                    <td></td> // delete reservation
                    </tr>
                {{/each}}
            </tbody>
            </table>
        </div>
      </div>
      <div class="col-lg-3 col-md-2"></div>
    </div>
  </div>
</div>

